@model Leave_Management.Web.Models.LeaveRequestVM

@{
    ViewData["Title"] = "Leave Request Details";
    string className;
    string headingText;
    if(@Model.Approved == null)
    {
        headingText = "Pending Approval";
        className = "Warning";
    }
    else if(@Model.Approved == true)
    {
        headingText = "Approved";
        className = "Success";
    }
    else
    {
        headingText = "Rejected";
        className = "Danger";
    }
}

<h1>Leave Request Details</h1>
<div class="alert alert-@className" role="alert">
  <h4 class="alert-heading">@headingText</h4>
  <hr>
  <p>
    <strong> Employee Name:</strong> @Model.Employee.FirstName @Model.Employee.LastName <br />
  </p>
  <p>
    <strong> Date Requested:</strong> @Html.DisplayFor(model => model.DateRequested)<br />
  </p>
</div>

<div>
    <h4>Leave Request Details</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.StartDate)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.StartDate)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.EndDate)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.EndDate)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.LeaveTypeId)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.LeaveTypeId)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.RequestComments)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.RequestComments)
        </dd>
    </dl>
</div>
<div>
    @if(@Model.Approved == null)
    {
        <form asp-action="ApproveRequest">
            <input asp-for="Id" type="hidden">
            <button type="submit" asp-route-approved = "true" class = "btn btn-success">Approve</button>
            <button type="submit" asp-route-approved = "false" class = "btn btn-danger">Reject</button>
        </form>
    }
    <a class = "btn btn-dark" asp-action="Index">Back to List</a>
</div>
